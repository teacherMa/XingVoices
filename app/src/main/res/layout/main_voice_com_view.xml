<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_com_basic_info_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_com_user_avatar_first"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/avatar"/>

            <TextView
                android:id="@+id/tv_com_user_name_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iv_com_user_avatar_first"
                android:text="@string/app_name"
                android:textColor="@color/colorTextUnselected"
                android:textSize="10sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_com_basic_info_first">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="46dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_voice_com_length_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:text="@string/main_default_voice_length"
                    android:textColor="@color/colorTextUnselected"
                    android:textSize="10sp"/>

                <ImageView
                    android:id="@+id/iv_com_content_first"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/tv_voice_com_length_first"
                    android:background="@drawable/bg_voice_bar"
                    android:contentDescription="@string/iv_con_des"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_com_like_num_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/main_default_watch_times"/>

            <ImageView
                android:id="@+id/iv_com_like_it_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/tv_com_like_num_first"
                android:contentDescription="@string/iv_con_des"
                android:src="@drawable/ic_main_voice_normal_like"/>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_com_basic_info_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_com_user_avatar_second"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/avatar"/>

            <TextView
                android:id="@+id/tv_com_user_name_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/iv_com_user_avatar_second"
                android:text="@string/app_name"
                android:textColor="@color/colorTextUnselected"
                android:textSize="10sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_com_basic_info_second">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="46dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_voice_com_length_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:text="@string/main_default_voice_length"
                    android:textColor="@color/colorTextUnselected"
                    android:textSize="10sp"/>

                <ImageView
                    android:id="@+id/iv_com_content_second"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/tv_voice_com_length_second"
                    android:background="@drawable/bg_voice_bar"
                    android:contentDescription="@string/iv_con_des"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_com_like_num_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/main_default_watch_times"/>

            <ImageView
                android:id="@+id/iv_com_like_it_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/tv_com_like_num_second"
                android:contentDescription="@string/iv_con_des"
                android:src="@drawable/ic_main_voice_normal_like"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>